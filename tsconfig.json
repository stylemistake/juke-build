{
  "compilerOptions": {
    "declaration": true,
    "emitDeclarationOnly": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "lib": ["ES2019"],
    "module": "CommonJS",
    "outDir": "./dist",
    "skipLibCheck": true,
    "strict": true,
    "target": "ES2019"
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "src/**/__test__"
  ]
}
